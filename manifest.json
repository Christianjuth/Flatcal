{
    "manifest_version": 2,

    "name": "FlatCal",
    "description": "A themeable calculator for your Browser",
    "version": "3.1",

    "author": "Christian Juth",

    "browser_action": {
        "default_icon": "resources/icons/icon.png",
        "default_popup": "index.html"
    },

    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+C",
                "windows": "Alt+C",
                "mac": "Alt+C",
                "chromeos": "Alt+C",
                "linux": "Alt+C"
            }
        }
    },

    "homepage_url": "https://github.com/christianjuth/flatcal",

    "icons": {
        "16": "resources/icons/icon.png",
        "48": "resources/icons/icon2.png",
        "128": "resources/icons/icon.png"
    },

    "offline_enabled": true,

    "permissions": [
        "clipboardWrite",
        "clipboardRead",
        "notifications",
        "http://calculatorextension.com/*",
        "https://raw.githubusercontent.com/*"
    ],

    "background" : {
        "page": "background/background.html"
    },

    "options_page": "settings/options/options.html",

    "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
